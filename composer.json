{
    "name": "cerbero/fluent-api",
    "type": "library",
    "description": "Framework agnostic base package to extend for creating fluent APIs from scratch or on top of existing ones.",
    "keywords": [
        "cerbero",
        "fluent-api",
        "api",
        "client",
        "http"
    ],
    "homepage": "https://github.com/cerbero90/fluent-api",
    "license": "MIT",
    "authors": [
        {
            "name": "Andrea Marco Sartori",
            "email": "andrea.marco.sartori@gmail.com",
            "homepage": "https://github.com/cerbero90",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0",
        "guzzlehttp/guzzle": "^6.2"
    },
    "require-dev": {
        "phpspec/phpspec" : "^2.5",
        "henrikbjorn/phpspec-code-coverage" : "^2.0",
        "scrutinizer/ocular": "^1.1",
        "squizlabs/php_codesniffer": "^2.3",
        "behat/behat": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "Cerbero\\FluentApi\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cerbero\\FluentApi\\": "tests"
        }
    },
    "scripts": {
        "test": "phpspec run -vvv"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
